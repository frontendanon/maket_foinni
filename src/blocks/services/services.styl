.services
  padding 120px 0
  
  .title
    margin-bottom 60px
    
  &__description
    margin-bottom 85px
    
    text-align center
  
  &__services-box
    display flex
    flex-wrap wrap
    justify-content space-between
                
  &__services-item
    border 0.5px solid #8f8e91
    
    padding 30px 15px
    margin-bottom 45px
    
    text-align center
    
    width 28%
    
    i 
      background url('../img/sprite.png')
      
      display block
      height 30px
      width 40px
      
      margin 0 auto
    
    h4
      margin 15px 0 40px 0
      
    p 
      font-size 14px
    
    &:hover
      border-color color-green
      transition .3s
      h4
        color color-green
        transition .3s
      
    &:nth-child(2)
      i
        background-position 50% 50%
        height 27px
        
    &:nth-child(3)
      i
        background-position 56% 0%
        height 29px
        width 32px
        
    &:nth-child(4)
      i
        background-position 0% 100%
        height 21px
        
    &:nth-child(5)
      i
        background-position 100% 0%
        width 32px
      
     &:nth-child(6)
      i
        background-position 0% 60%
        height 32px
        
    